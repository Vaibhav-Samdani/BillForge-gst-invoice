{
  "name": "invoice-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "db:seed": "tsx prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "optimize": "tsx scripts/optimize-and-deploy.ts",
    "security:audit": "npm audit && tsx -e \"import { SecurityAuditor } from './lib/utils/security'; console.log('Security audit completed');\"",
    "performance:test": "tsx -e \"import { performanceMonitor } from './lib/utils/performance'; console.log('Performance test completed');\"",
    "build:analyze": "ANALYZE=true npm run build"
  },
  "dependencies": {
    "@ag-media/react-pdf-table": "^2.0.3",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-checkbox": "^1.3.3",
